{
  "name": "kaws",
  "version": "0.0.1",
  "description": "",
  "main": "build/index.js",
  "authors": [
    "Luc Succes <l2succes@gmail.com>",
    "Art.sy Inc"
  ],
  "license": "MIT",
  "scripts": {
    "bootstrap-data": "ts-node scripts/bootstrapOrUpdate.ts",
    "build": "tsc",
    "dev": "node --inspect -r ts-node/register src/index.ts",
    "dump-schema": "ts-node scripts/dumpSchema.ts",
    "lint": "tslint 'src/**/*.{ts,tsx}'",
    "release": "release-it",
    "start": "node build/index.js",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "update-sitemap": "ts-node scripts/updateSitemapJson.ts",
    "watch": "tsc --watch"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/__tests__/**/*test.ts"
    ],
    "roots": [
      "<rootDir>/src"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "proseWrap": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged; yarn dump-schema _schema.graphql",
      "pre-push": "yarn build"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "tslint --fix",
      "yarn prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "aws-sdk": "^2.376.0",
    "class-transformer": "^0.1.9",
    "csv-parser": "^2.1.0",
    "dd-trace": "^0.6.0",
    "graphql-yoga": "^1.16.2",
    "lodash": "^4.17.11",
    "mongodb": "~3.0.8",
    "mongodb-uri": "^0.9.7",
    "morgan": "^1.9.1",
    "reflect-metadata": "^0.1.12",
    "slugify": "^1.3.1",
    "type-graphql": "^0.14.0",
    "typeorm": "^0.2.7"
  },
  "devDependencies": {
    "@types/dd-trace": "^0.6.1",
    "@types/jest": "^23.3.2",
    "@types/lodash": "^4.14.116",
    "@types/mongodb-uri": "^0.9.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.11.0",
    "danger": "^4.0.2",
    "dotenv": "^6.1.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "release-it": "^7.6.1",
    "ts-jest": "^23.10.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  }
}
